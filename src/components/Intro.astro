---
const {introTitulo, introSubtitulo} = Astro.props
---
<section>
	<div id="div--intro">
	    <h1>{introTitulo}</h1>
	    <p>{introSubtitulo}</p>
	</div>
</section>
<style>
    #div--intro {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-start;
    font-size: 18px;
    font-weight: normal;
    color: white;
    width: 100%;
    height: 230px;
    background-image: linear-gradient(45deg, #2C72EC, #2EA3F2);
    padding-left: 85px;
}

#div--intro h1 {
    font-weight: normal;
    font-size: 35px;
}
</style>